{
  "name": "gofakeit-extension",
  "version": "1.0.0",
  "description": "Chrome extension to generate fake data using the Gofakeit API",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "postinstall": "wxt prepare",
    "clean": "rm -rf .output dist"
  },
  "dependencies": {
    "gofakeit": "^2.1.1"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.6",
    "@types/node": "^24.3.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "vite-plugin-static-copy": "^3.1.2",
    "vite-plugin-web-extension": "^4.4.5",
    "wxt": "^0.20.10"
  }
}
