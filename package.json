{
  "name": "gofakeit-extension",
  "version": "1.0.0",
  "type": "module",
  "description": "Browser extension to generate fake data using the Gofakeit API",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build -b chrome && wxt build -b firefox",
    "build:chrome": "wxt build -b chrome",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip -b chrome && wxt zip -b firefox",
    "zip:chrome": "wxt zip -b chrome",
    "zip:firefox": "wxt zip -b firefox",
    "postinstall": "wxt prepare",
    "clean": "rm -rf .output dist",
    "test": "vitest --run",
    "test:run": "vitest run"
  },
  "dependencies": {
    "gofakeit": "^2.3.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.6",
    "@types/node": "^24.3.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "vite-plugin-static-copy": "^3.1.2",
    "vite-plugin-web-extension": "^4.4.5",
    "wxt": "^0.20.10",
    "vitest": "^2.1.8",
    "jsdom": "^25.0.1",
    "@vitest/ui": "^2.1.8"
  }
}
