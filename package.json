{
  "name": "gofakeit-extension",
  "version": "1.0.0",
  "description": "Chrome extension to generate fake data using the Gofakeit API",
  "scripts": {
    "dev": "vite build --watch",
    "build": "npm run build:chrome && npm run build:firefox",
    "build:chrome": "TARGET=chrome vite build",
    "build:firefox": "TARGET=firefox vite build",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "gofakeit": "^1.3.2"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.4",
    "@types/node": "^24.3.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "vite-plugin-static-copy": "^3.1.2",
    "vite-plugin-web-extension": "^4.4.5"
  }
}
