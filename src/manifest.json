{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "name": "Gofakeit",
  "version": "1.0",
  "description": "Generate fake data for testing and development",
  "{{chrome}}.action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "assets/images/icon16.png",
      "48": "assets/images/icon48.png",
      "128": "assets/images/icon128.png"
    },
    "default_title": "Click to generate fake data"
  },
  "{{firefox}}.browser_action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "assets/images/icon16.png",
      "48": "assets/images/icon48.png",
      "128": "assets/images/icon128.png"
    },
    "default_title": "Click to generate fake data"
  },
  "icons": {
    "16": "assets/images/icon16.png",
    "48": "assets/images/icon48.png",
    "128": "assets/images/icon128.png"
  },
  "{{chrome}}.background": {
    "service_worker": "src/background.ts"
  },
  "{{firefox}}.background": {
    "scripts": ["src/background.ts"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.ts"]
    }
  ],
  "permissions": ["{{chrome}}.scripting", "{{chrome}}.activeTab", "contextMenus", "storage", "{{firefox}}.<all_urls>"],
  "{{chrome}}.host_permissions": ["<all_urls>"],
  "{{chrome}}.web_accessible_resources": [{
    "resources": ["assets/images/full.svg"],
    "matches": ["<all_urls>"]
  }],
  "{{firefox}}.web_accessible_resources": ["assets/images/full.svg"],
  "commands": {
    "trigger-autofill": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Trigger fake data generation on active tab"
    }
  }
}
